<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/postnewsshape"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="431dp"
    android:background="#E0E0E0"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#E0E0E0" >

       
       
          <TextView
            android:id="@+id/elective_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Elective Courses"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="20sp" />

          <ListView
              android:id="@+id/elective_courseslist"
              android:layout_width="fill_parent"
              android:layout_height="286dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginTop="60dp"
              android:background="@drawable/commoncoursesshape"
              android:choiceMode="multipleChoice"
              android:divider="#99CCFF"
              android:dividerHeight="2dp"
              android:paddingTop="10dp" />
          
            </FrameLayout>
            

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Register"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/postnewsshape"
        android:textStyle="bold" />
     

</LinearLayout></ScrollView>