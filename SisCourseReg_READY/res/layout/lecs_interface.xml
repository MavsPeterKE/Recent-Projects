<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0E0E0"
    android:orientation="vertical"
     >

 

        <TextView
            android:id="@+id/news_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="POST NEWS"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/studreg_input"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/username_editshape"
            android:ems="10"
            android:inputType="textMultiLine" />
        
        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="POST TIMETABLE"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/year_select"
            android:layout_width="100dp"
            android:layout_height="41dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/username_editshape" />
        
        <Spinner
            android:id="@+id/stud_course"
            android:layout_width="100dp"
            android:layout_height="41dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/username_editshape" />
        
        
        <TextView
            android:id="@+id/stud_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:text="Year"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/stud_year_input"
            android:layout_width="248dp"
            android:layout_height="41dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/username_editshape" />

        <TextView
            android:id="@+id/stud_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="265dp"
            android:text="Contacts"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/studcontact_input"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="295dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/username_editshape"
            android:inputType="phone" >

            <requestFocus />
        </EditText>
        <TextView
            android:id="@+id/studpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="345dp"
            android:text="Password"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/studpassword_input"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="375dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/username_editshape"
            android:inputType="textPassword" />

         <TextView
            android:id="@+id/stud_cpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="425dp"
            android:text="Confirm Password"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/studcpassword_input"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="450dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="@drawable/username_editshape"
            android:inputType="textPassword" />


    <Button
        android:id="@+id/studcreate_account"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/shapes"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:text="Create Account" />
     

</LinearLayout></ScrollView>