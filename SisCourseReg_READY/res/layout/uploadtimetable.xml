<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/postnewsshape"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_marginTop="25dp"
    android:layout_height="690dp"
    android:background="#E0E0E0"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="367dp"
        android:layout_margin="10dp"
        android:background="#E0E0E0" >

        <TextView
            android:id="@+id/posted_Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Type In the Download Link"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/link_input"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="65dp"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:background="@drawable/username_editshape"
            android:ems="10" />

        <TextView
            android:id="@+id/alternative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="190dp"
            android:text="Or Upload"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/post_link"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:text="Post Link" />

        <TextView
            android:id="@+id/file_location"
            android:layout_width="240dp"
            android:layout_height="61dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="225dp"
            android:background="@drawable/username_editshape"
            android:text="File Location"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/Upload_file"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="295dp"
            android:text="Upload" />
    </FrameLayout>
</LinearLayout>

</ScrollView>