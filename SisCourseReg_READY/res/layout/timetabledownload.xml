<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/postnewsshape"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_marginTop="60dp"
    android:layout_height="690dp"
    android:background="#E0E0E0"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_margin="10dp"
        android:background="#E0E0E0" >

        <TextView
            android:id="@+id/fromlink_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:text="Download From Link"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/alternative_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="135dp"
            android:text="Alternative Download"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/from_downloadbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
             android:background="@drawable/username_editshape"
             android:textColor="#0066ff"
            android:layout_marginTop="65dp"
            android:textAlignment="center"
            android:text="Link Download" />

        <Button
            android:id="@+id/download_file"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#0066ff"
            android:layout_marginTop="180dp"
            android:text="App Download" />
    </FrameLayout>
</LinearLayout>

</ScrollView>